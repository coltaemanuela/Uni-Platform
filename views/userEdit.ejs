<body>
<% include navbar.ejs %>
<div class="container" style=" margin-top:5%;">
  <form class="form-horizontal" method="post" action= '/users/edit'>
    <div class="container">
      <div class="col-md-12 ">
        <div class="row">
			<h4 style="color: #f0ad4e; font-family: OratorStd; font-size:24px; text-align: center; padding: 50px;">Modifica Detalii Membru</h4><br/>  
			
				<div class="col-md-6 ">
					<input type="hidden" name="id" value= "<%= uid%>">						
					<div class="form-group">
						<label style="color: #7E8AAA;" class="col-md-3 control-label">Prenume:</label>
						<div class="col-md-8">
							<input type="text" class="form-control" name="firstname" value="<%= facultyusers.user.firstname%>" placeholder="Prenume" required="required">
						</div>
					</div>
					<div class="form-group">
						<label style="color: #7E8AAA;" class="col-md-3 control-label">Nume:</label>
						<div class="col-md-8">
							<input type="text"  class="form-control" name="lastName" value="<%= facultyusers.user.lastName %> " placeholder="Nume" required="required">
						</div>
					</div>		 
					 <div class="form-group">
						<label style="color: #7E8AAA;" class="col-md-3 control-label">Numar de telefon:</label>
						<div class="col-md-8">
							<input type="text" class="form-control" name="phone" value="<%= facultyusers.user.phone %>" placeholder="Numar de telefon" required="required" >
						</div>
					 </div>
					 <div class="form-group">
						<label style="color: #7E8AAA;" class="col-md-3 control-label">Email:</label>
						<div class="col-md-8">
							<input type="email" class="form-control" name="email" placeholder="Email" value="<%= facultyusers.user.email %> " required="required">
						</div>
					 </div>
				</div>	 
						 
					<div class="col-md-6 " style=" display:inline-block;">             
						<div class="form-group">
							<label style="color: #7E8AAA;" class="col-md-3 control-label">Anul de studii:</label>
							<div class="col-md-8">									
								<select class="form-control"  name="uniYear" style=" display:inline-block;" >
									<option value="novalue">-Selectati anul de studii-</option>									 
									<option value="1"  <% if( facultyusers.uniYear=== 1){%> selected <%}%>  >   1 </option>
									<option value="2"  <% if( facultyusers.uniYear=== 2){%> selected <%}%> >  2 </option>
									<option value="3"  <% if( facultyusers.uniYear=== 3){%> selected <%}%> > 3 </option>
									<option value="4" <% if( facultyusers.uniYear=== 4){%> selected <%}%>  >  4 </option>
								</select>
							</div>
						</div>
						
						<div class="form-group">
							<label style="color: #7E8AAA;" class="col-md-3 control-label">Specializare: </label> 
							
							
							<div class="col-md-8">	
							<select class="form-control"  name="specialization" style=" display:inline-block;" >
							  <%  Object.keys(specializations).forEach(function (id) {             
				           		 var specialization = specializations[id]; %>
				           		 <option value=" <%= specialization.id %>"  <% if( facultyusers.specialization.id=== specialization.id){%> selected <%}%> >   <%= specialization.name%> </option>

				            	<% });%>
							</select>


							</div>						
						</div>
					 	<div class="form-group">
							<label style="color: #7E8AAA;" class="col-md-3 control-label">Cont utilizator activ:</label>
							<label class="switch">
							  <input type="checkbox"  name= "activeAccount" <% if(facultyusers.user.activeAccount == 1){ %>  checked <%} else{%> unchecked<%}%>  >
							  <div class="slider round"></div>
							</label>
						</div>
				</div>
            			 
				<hr>
				<div class="row" style="padding-top:30px;">          
					<div class="col-md-12" style="text-align:center; margin-top:50px;">															
						<button class="btn " id="addValue" style="background-color:#7E8AAA; color:white;"> Salveaza Modificarile</button>
					  <a class="btn btn-warning"  href="/users">Anuleaza</a><br><br>
					</div>            
		  		</div>
			</div>
		</div>
	</form>

	<style type="text/css">
.switch {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 34px;
}

/* Hide default HTML checkbox */
.switch input {display:none;}

/* The slider */
.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ccc;
  -webkit-transition: .4s;
  transition: .4s;
}

.slider:before {
  position: absolute;
  content: "";
  height: 26px;
  width: 26px;
  left: 4px;
  bottom: 4px;
  background-color: white;
  -webkit-transition: .4s;
  transition: .4s;
}

input:checked + .slider {
  background-color: #f0ad4e;
}

input:focus + .slider {
  box-shadow: 0 0 1px #2196F3;
}

input:checked + .slider:before {
  -webkit-transform: translateX(26px);
  -ms-transform: translateX(26px);
  transform: translateX(26px);
}

/* Rounded sliders */
.slider.round {
  border-radius: 24px;
}

.slider.round:before {
  border-radius: 50%;
}

	</style>
</div>
</body>
</html>
